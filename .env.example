# DockerFleet Manager - root environment file (used by Docker Compose)
# Copy to .env:
#   cp .env.example .env
#
# Never commit your real .env (it is gitignored).

NODE_ENV=production
API_VERSION=v1

# Database (Postgres)
DB_NAME=dockerfleet
DB_USER=dockerfleet_user
DB_PASSWORD=dockerfleet_password

# JWT (change in production!)
JWT_SECRET=change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Encryption (32 chars for AES-256-GCM)
ENCRYPTION_KEY=change-this-32-character-key!!

# CORS
CORS_ORIGIN=http://localhost:3020

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Email Alerts (SMTP)
EMAIL_ENABLED=false
EMAIL_FROM_ADDRESS=noreply@dockerfleet.local
EMAIL_FROM_NAME=DockerFleet Manager
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_REJECT_UNAUTHORIZED=true

# Monitoring defaults (can be overridden in the web UI)
MONITORING_CHECK_INTERVAL_MS=60000
MONITORING_ALERT_COOLDOWN_MS=43200000
MONITORING_NO_AUTO_RESTART_COOLDOWN_MS=43200000
MONITORING_ALERT_ON_CONTAINER_DOWN=true
MONITORING_ALERT_ON_CONTAINER_RECOVERY=true
MONITORING_ALERT_ON_NO_AUTO_RESTART=true
MONITORING_MIN_DOWN_TIME_MS=0

# Frontend API URL (optional - auto-detects from host if not set)
# Leave empty to auto-detect, or set to full URL like http://your-server.com:5020
REACT_APP_API_URL=
